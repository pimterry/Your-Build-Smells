@import 'prism/themes/prism-okaidia.css'

@font-face {
  font-family: 'Bangers';
  font-style: normal;
  font-weight: 400;
  src: url("../static/bangers.eot");
  src: local('Bangers'),
       local('Bangers-Regular'),
       url("../static/bangers.woff") format('woff'),
       url("../static/bangers.woff2") format('woff2'),
       url("../static/bangers.ttf") format('truetype'),
       url("../static/bangers.eot") format('eot');
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2212, U+2215, U+E0FF, U+EFFD, U+F000;
}

@font-face {
  font-family: 'Josefin Slab';
  font-style: normal;
  font-weight: 400;
  src: local('Josefin Slab'),
       local('JosefinSlab'),
       url("../static/josefin-slab.woff2") format('woff2');
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2212, U+2215, U+E0FF, U+EFFD, U+F000;
}      

@font-face {
  font-family: 'Magra';
  font-style: normal;
  font-weight: 400;
  src: local('Magra'),
       url("../static/magra-bold.ttf") format('truetype');
}      

body {
  font-family: "Magra", sans-serif;
}

h2 {
  font-size: 90pt;
}

.bespoke-backdrop {
  transition-duration: 0.3s;
  background-size: cover;
  background-position: center;

  &.roses {
    background-color: #fff;
    background-image: url("../static/roses.jpg");
  }

  &.cogs {
    background-image: url("../static/cogs.jpg");
  }
  
  &.engine {
    background-image: url("../static/engine.jpg");
  }

  &.cat {
    background-image: url("../static/cat.jpg");
  }

  &.coding {
    background-image: url("../static/coding.jpg");
  }

  &.white {
    background-color: #fff;
  }

  &.pink {
    background-color: #DE2D64;
  }

  &.red {
    background-color: #EF2040;
  }
}

.bespoke-slide {
  background-color: rgba(255, 255, 255, 0);  
  transition: none;
  padding: 20px;

  aside {
      display: none;
  }
}

section {
  &.title {
    h1 {
      letter-spacing: -1px;
      font-weight: normal;
      font-family: "Bangers", sans-serif;

      position: absolute;
      top: 20%;
      left: 40px;
      right: 50%;
      bottom: 0;
      text-align: left;

      font-size: 85pt;
      line-height: 99px;

      color: #DE2D64;

      background: -webkit-linear-gradient(180deg, #FF82A9, #E41052)
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
  }

  &.smell {
    color: #FFF;
    font-family: "Josefin Slab", sans-serif;
  }

  &.conclusion {
    color: #DE2D64;

    h3 {
      margin: 0;

      font-family: "Josefin Slab";
      font-weight: normal;
      font-size: 30pt;
    }

    h2 {
      font-family: "Bangers", sans-serif;
      font-weight: normal;
      font-size: 120pt;
    }
  }

  &.your-build {
    color: #fff;
    text-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
  }

  &.who-cares {
    color: #fff;
    h2 {
      margin-bottom: 300px;
      text-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
    }
  }

  &.pain-is-feedback {
    h2 {
      font-family: "Magra", sans-serif;
      font-weight: normal;
      font-size: 60pt;
    }

    h3 {
      margin: 0;

      font-family: "Josefin Slab";
      font-weight: normal;
      font-size: 30pt;
    }
  }
}
